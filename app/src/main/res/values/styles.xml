<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="background">@color/background_lite</item>
    </style>

    <style name="NavBarTheme" parent="AppTheme">
        <item name="colorSurface">@color/color_article_bar</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
    </style>

    <style name="NavBarStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextColor">@color/tint_color</item>
        <item name="itemIconTint">@color/tint_color</item>
    </style>

</resources>
